<!-- Audio player for popular lectors + Reviews carousel -->
<script>
var popularAudio = null;
var popularBtn = null;

function playPopular(btn, src) {
  if (popularBtn && popularBtn !== btn) {
    popularBtn.querySelector('.play-icon').classList.remove('hidden');
    popularBtn.querySelector('.pause-icon').classList.add('hidden');
  }
  if (popularAudio && popularAudio.src.includes(src) && !popularAudio.paused) {
    popularAudio.pause();
    btn.querySelector('.play-icon').classList.remove('hidden');
    btn.querySelector('.pause-icon').classList.add('hidden');
    return;
  }
  if (!popularAudio) popularAudio = new Audio();
  popularAudio.src = src;
  popularAudio.play();
  popularBtn = btn;
  btn.querySelector('.play-icon').classList.add('hidden');
  btn.querySelector('.pause-icon').classList.remove('hidden');
  popularAudio.onended = function() {
    btn.querySelector('.play-icon').classList.remove('hidden');
    btn.querySelector('.pause-icon').classList.add('hidden');
  };
}

// Reviews carousel
var currentSlide = 0;
var totalSlides = 3;

function slideReviews(dir) {
  currentSlide = (currentSlide + dir + totalSlides) % totalSlides;
  updateSlider();
}

function goToSlide(n) {
  currentSlide = n;
  updateSlider();
}

function updateSlider() {
  var slider = document.getElementById('reviews-slider');
  if (slider) slider.style.transform = 'translateX(-' + (currentSlide * 100) + '%)';
  var dots = document.querySelectorAll('.review-dot');
  dots.forEach(function(dot, i) {
    dot.className = 'review-dot w-2.5 h-2.5 rounded-full transition-colors ' + (i === currentSlide ? 'bg-accent' : 'bg-gray-600');
  });
}

// Auto-play carousel
setInterval(function() { slideReviews(1); }, 8000);
</script>

