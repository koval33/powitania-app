    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-5 gap-6">
      <% var popularIds = ['jacek-brzostynski', 'malgorzata', 'janusz', 'anita', 'maciej-jablonski']; %>
      <% var allVoices = typeof voices !== 'undefined' ? voices : []; %>
      <% popularIds.forEach(function(pid) { %>
        <% var v = allVoices.find(function(x) { return x.id === pid; }); %>
        <% if (v) { %>
        <div class="text-center group">
          <div class="relative mb-3">
            <img
              src="<%= v.photo %>"
              alt="<%= v.name %>"
              class="w-28 h-28 md:w-32 md:h-32 rounded-full mx-auto object-cover border-2 border-white/10 group-hover:border-accent/50 transition-all"
              loading="lazy"
            >
            <% if (v.audio) { %>
            <button
              onclick="playPopular(this, '<%= v.audio %>')"
              class="absolute bottom-0 right-1/2 translate-x-1/2 translate-y-1/3 w-10 h-10 bg-accent hover:bg-accent-light text-white rounded-full flex items-center justify-center shadow-lg transition-all hover:scale-110"
              title="Odsłuchaj próbkę"
            >
              <svg class="w-4 h-4 ml-0.5 play-icon" fill="currentColor" viewBox="0 0 24 24"><path d="M8 5v14l11-7z"/></svg>
              <svg class="w-4 h-4 pause-icon hidden" fill="currentColor" viewBox="0 0 24 24"><path d="M6 19h4V5H6v14zm8-14v14h4V5h-4z"/></svg>
            </button>
            <% } %>
          </div>
          <a href="/lektor/<%= v.id %>/" class="text-white font-semibold text-sm hover:text-accent transition-colors"><%= v.name %></a>
          <div class="text-xs text-gray-500 mt-0.5"><%= v.gender === 'm' ? 'Lektor' : 'Lektorka' %></div>
        </div>
        <% } %>
      <% }); %>
    </div>

