<%- include('partials/head') %>

<section class="py-12 md:py-16">
  <div class="max-w-4xl mx-auto px-4">
    <div class="text-center mb-12">
      <h1 class="text-3xl md:text-4xl font-bold text-white mb-4" style="font-family: 'Poppins', sans-serif;">Kontakt</h1>
      <p class="text-lg text-gray-400">Masz pytania? Napisz do nas — odpowiadamy w ciągu 2 godzin</p>
    </div>

    <div class="grid md:grid-cols-2 gap-8">

      <!-- Formularz -->
      <div class="bg-dark-800 rounded-2xl border border-white/5 p-8">
        <h2 class="text-xl font-bold text-white mb-6">Wyślij wiadomość</h2>
        <form id="contact-form" class="space-y-4">
          <div>
            <label class="block text-white font-semibold mb-2 text-sm">Imię i nazwisko *</label>
            <input type="text" name="name" required class="w-full bg-dark-700 border border-white/10 rounded-lg px-4 py-3 text-white placeholder-gray-600 focus:border-accent focus:outline-none" placeholder="Jan Kowalski">
          </div>
          <div>
            <label class="block text-white font-semibold mb-2 text-sm">Email *</label>
            <input type="email" name="email" required class="w-full bg-dark-700 border border-white/10 rounded-lg px-4 py-3 text-white placeholder-gray-600 focus:border-accent focus:outline-none" placeholder="jan@firma.pl">
          </div>
          <div>
            <label class="block text-white font-semibold mb-2 text-sm">Telefon</label>
            <input type="tel" name="phone" class="w-full bg-dark-700 border border-white/10 rounded-lg px-4 py-3 text-white placeholder-gray-600 focus:border-accent focus:outline-none" placeholder="+48 600 000 000">
          </div>
          <div>
            <label class="block text-white font-semibold mb-2 text-sm">Wiadomość *</label>
            <textarea name="description" rows="5" required class="w-full bg-dark-700 border border-white/10 rounded-lg px-4 py-3 text-white placeholder-gray-600 focus:border-accent focus:outline-none resize-y" placeholder="W czym możemy pomóc?"></textarea>
          </div>
          <button type="submit" id="contact-submit" class="bg-accent hover:bg-accent-light text-white px-6 py-3 rounded-lg font-semibold w-full transition-colors">
            Wyślij wiadomość
          </button>
          <div id="contact-msg" class="hidden text-center text-sm"></div>
        </form>
      </div>

      <!-- Dane kontaktowe -->
      <div class="space-y-6">
        <div class="bg-dark-800 rounded-2xl border border-white/5 p-6">
          <h3 class="text-white font-bold mb-5">Dane kontaktowe</h3>
          <div class="space-y-4 text-sm">
            <div class="flex items-start gap-3">
              <svg class="w-5 h-5 text-accent flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"/></svg>
              <div>
                <div class="text-white font-medium">Email</div>
                <a href="mailto:biuro@powitania.pl" class="text-accent hover:underline">biuro@powitania.pl</a>
              </div>
            </div>
            <div class="flex items-start gap-3">
              <svg class="w-5 h-5 text-accent flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"/></svg>
              <div>
                <div class="text-white font-medium">Telefon</div>
                <a href="tel:+48605491069" class="text-accent hover:underline">+48 605 491 069</a>
              </div>
            </div>
            <div class="flex items-start gap-3">
              <svg class="w-5 h-5 text-accent flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z"/></svg>
              <div>
                <div class="text-white font-medium">Adres</div>
                <p class="text-gray-400">OPTIMUM Paweł Kowalski<br>ul. Pozytywistów 4/4<br>20-639 Lublin</p>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-dark-800 rounded-2xl border border-white/5 p-6">
          <h3 class="text-white font-bold mb-3">Godziny pracy</h3>
          <p class="text-gray-400 text-sm">Poniedziałek — Piątek: 08:00 — 18:00</p>
          <p class="text-gray-500 text-xs mt-2">Odpowiadamy na zapytania w ciągu 2 godzin w godzinach pracy.</p>
        </div>

        <div class="bg-accent/5 border border-accent/20 rounded-2xl p-6">
          <h3 class="text-white font-bold mb-3">Potrzebujesz tekstu?</h3>
          <p class="text-gray-400 text-sm mb-4">Skorzystaj z naszego kreatora tekstów — AI pomoże przygotować profesjonalny tekst do nagrania.</p>
          <a href="/#kreator" class="inline-block bg-accent hover:bg-accent-light text-white px-6 py-2.5 rounded-lg font-semibold text-sm transition-colors">
            Otwórz kreator
          </a>
        </div>
      </div>

    </div>
  </div>
</section>

<script>
document.getElementById('contact-form').addEventListener('submit', function(e) {
  e.preventDefault();
  var btn = document.getElementById('contact-submit');
  var msg = document.getElementById('contact-msg');
  var origText = btn.textContent;

  btn.disabled = true;
  btn.textContent = 'Wysyłanie...';
  msg.classList.add('hidden');

  var fd = new FormData(e.target);
  var data = {};
  fd.forEach(function(v, k) { data[k] = v; });

  fetch('/api/contact/inquiry', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify(data)
  })
  .then(function(r) { return r.json(); })
  .then(function(res) {
    msg.classList.remove('hidden');
    if (res.ok) {
      msg.className = 'mt-4 text-center text-sm text-green-400';
      msg.textContent = res.message || 'Dziękujemy! Odpowiemy w ciągu 2 godzin.';
      e.target.reset();
    } else {
      msg.className = 'mt-4 text-center text-sm text-red-400';
      msg.textContent = res.error || 'Błąd wysyłania.';
    }
  })
  .catch(function() {
    msg.classList.remove('hidden');
    msg.className = 'mt-4 text-center text-sm text-red-400';
    msg.textContent = 'Błąd połączenia. Spróbuj ponownie.';
  })
  .finally(function() {
    btn.disabled = false;
    btn.textContent = origText;
  });
});
</script>

