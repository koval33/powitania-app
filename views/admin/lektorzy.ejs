<!DOCTYPE html>
<html lang="pl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: { extend: { colors: {
        dark: { 900: '#1a1d23', 800: '#22262e', 700: '#2a2f38', 600: '#343842' },
        accent: { DEFAULT: '#f59e0b', light: '#fbbf24', dark: '#d97706' }
      }}}
    }
  </script>
</head>
<body class="bg-dark-900 text-gray-300 min-h-screen">

  <!-- Header -->
  <header class="bg-dark-800 border-b border-white/10 px-6 py-4 flex items-center justify-between">
    <div class="flex items-center gap-4">
      <h1 class="text-xl font-bold text-white">Panel Admin</h1>
      <span class="text-sm text-gray-500">/ Lektorzy (<%= voices.length %>)</span>
    </div>
    <div class="flex items-center gap-3">
      <a href="/admin/lektorzy/dodaj/" class="bg-accent hover:bg-accent-light text-white px-5 py-2 rounded-lg text-sm font-semibold transition-colors">
        + Dodaj lektora
      </a>
      <a href="/" class="text-gray-400 hover:text-white text-sm transition-colors">Strona glowna</a>
    </div>
  </header>

  <!-- Message -->
  <% if (msg) { %>
    <div class="max-w-7xl mx-auto px-6 mt-4">
      <div class="bg-accent/10 border border-accent/30 text-accent px-4 py-3 rounded-lg text-sm">
        <%= msg %>
      </div>
    </div>
  <% } %>

  <!-- Search -->
  <div class="max-w-7xl mx-auto px-6 mt-6">
    <input type="text" id="search" placeholder="Szukaj lektora..." class="bg-dark-800 border border-white/10 text-gray-300 text-sm rounded-lg px-4 py-2.5 w-full max-w-md focus:border-accent focus:outline-none placeholder-gray-500">
  </div>

  <!-- Table -->
  <div class="max-w-7xl mx-auto px-6 mt-4 pb-12">
    <div class="bg-dark-800 rounded-xl border border-white/5 overflow-hidden">
      <table class="w-full">
        <thead>
          <tr class="border-b border-white/10 text-left">
            <th class="px-4 py-3 text-xs font-medium text-gray-500 uppercase">Zdjecie</th>
            <th class="px-4 py-3 text-xs font-medium text-gray-500 uppercase">Nazwa</th>
            <th class="px-4 py-3 text-xs font-medium text-gray-500 uppercase">Plec</th>
            <th class="px-4 py-3 text-xs font-medium text-gray-500 uppercase">Wiek</th>
            <th class="px-4 py-3 text-xs font-medium text-gray-500 uppercase">Jezyki</th>
            <th class="px-4 py-3 text-xs font-medium text-gray-500 uppercase">Grupa</th>
            <th class="px-4 py-3 text-xs font-medium text-gray-500 uppercase">Tagi</th>
            <th class="px-4 py-3 text-xs font-medium text-gray-500 uppercase">Audio</th>
            <th class="px-4 py-3 text-xs font-medium text-gray-500 uppercase text-right">Akcje</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-white/5">
          <% voices.forEach(function(v) { %>
          <tr class="voice-row hover:bg-white/[0.02] transition-colors" data-name="<%= v.name.toLowerCase() %>">
            <td class="px-4 py-3">
              <% if (v.photo) { %>
                <img src="<%= v.photo %>" alt="" class="w-10 h-10 rounded-lg object-cover">
              <% } else { %>
                <div class="w-10 h-10 rounded-lg bg-dark-700 flex items-center justify-center text-gray-600 text-xs">?</div>
              <% } %>
            </td>
            <td class="px-4 py-3">
              <span class="text-white font-medium"><%= v.name %></span>
              <div class="text-xs text-gray-500"><%= v.id %></div>
            </td>
            <td class="px-4 py-3 text-sm"><%= v.gender === 'm' ? 'M' : 'K' %></td>
            <td class="px-4 py-3 text-sm"><%= v.age || '-' %></td>
            <td class="px-4 py-3">
              <% (v.languages || []).forEach(function(l) { %>
                <span class="inline-block text-[10px] bg-dark-600 text-gray-400 px-1.5 py-0.5 rounded mr-0.5"><%= l %></span>
              <% }); %>
            </td>
            <td class="px-4 py-3 text-xs"><%= v.priceGroup ? (v.priceGroup.includes('NiÅ¼sza') ? 'Nizsza' : 'Wyzsza') : '-' %></td>
            <td class="px-4 py-3">
              <% if (v.famous) { %><span class="text-[10px] bg-yellow-500/10 text-yellow-400 px-1.5 py-0.5 rounded">Znany</span><% } %>
              <% if (v.native) { %><span class="text-[10px] bg-blue-500/10 text-blue-400 px-1.5 py-0.5 rounded">Native</span><% } %>
            </td>
            <td class="px-4 py-3">
              <% if (v.audio) { %>
                <span class="text-[10px] text-accent">MP3</span>
              <% } else { %>
                <span class="text-[10px] text-gray-600">brak</span>
              <% } %>
            </td>
            <td class="px-4 py-3 text-right">
              <div class="flex items-center justify-end gap-2">
                <a href="/admin/lektorzy/edytuj/<%= v.id %>/" class="text-xs text-gray-400 hover:text-white transition-colors px-2 py-1 rounded border border-white/10 hover:border-white/20">Edytuj</a>
                <form method="POST" action="/admin/lektorzy/usun/<%= v.id %>/" onsubmit="return confirm('Na pewno usunac <%= v.name %>?')" class="inline">
                  <button type="submit" class="text-xs text-red-400 hover:text-red-300 transition-colors px-2 py-1 rounded border border-red-500/20 hover:border-red-500/40">Usun</button>
                </form>
              </div>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>

  <script>
    document.getElementById('search').addEventListener('input', function() {
      var q = this.value.toLowerCase();
      document.querySelectorAll('.voice-row').forEach(function(row) {
        row.style.display = row.dataset.name.indexOf(q) !== -1 ? '' : 'none';
      });
    });
  </script>
</body>
</html>
