<body class="bg-white text-gray-800 antialiased">

<% if (!skipHeader) { %>
<header class="sticky top-0 z-50 bg-white border-b border-gray-100 shadow-sm">
  <nav class="max-w-6xl mx-auto px-4 py-3 flex items-center justify-between">
    <a href="/" class="flex items-center gap-2">
      <span class="text-2xl font-bold text-gray-900">powitania<span class="text-blue-500">.pl</span></span>
    </a>

    <div class="hidden md:flex items-center gap-6 text-sm font-medium">
      <a href="/bank-glosow/" class="hover:text-blue-500 transition-colors <%= currentPath === '/bank-glosow/' ? 'text-blue-500' : 'text-gray-600' %>">Bank glosow</a>
      <a href="/cennik/" class="hover:text-blue-500 transition-colors <%= currentPath === '/cennik/' ? 'text-blue-500' : 'text-gray-600' %>">Cennik</a>
      <a href="/faq/" class="hover:text-blue-500 transition-colors <%= currentPath === '/faq/' ? 'text-blue-500' : 'text-gray-600' %>">FAQ</a>
      <a href="/kontakt/" class="hover:text-blue-500 transition-colors <%= currentPath === '/kontakt/' ? 'text-blue-500' : 'text-gray-600' %>">Kontakt</a>
      <a href="/#kreator" class="bg-blue-500 hover:bg-blue-600 text-white px-5 py-2 rounded-lg transition-colors font-semibold">Przygotuj tekst</a>
    </div>

    <button id="menu-toggle" class="md:hidden p-2 rounded-lg hover:bg-gray-100">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
      </svg>
    </button>
  </nav>

  <div id="mobile-menu" class="hidden md:hidden border-t border-gray-100 bg-white px-4 pb-4">
    <a href="/bank-glosow/" class="block py-3 text-gray-600 hover:text-blue-500 border-b border-gray-50">Bank glosow</a>
    <a href="/cennik/" class="block py-3 text-gray-600 hover:text-blue-500 border-b border-gray-50">Cennik</a>
    <a href="/faq/" class="block py-3 text-gray-600 hover:text-blue-500 border-b border-gray-50">FAQ</a>
    <a href="/kontakt/" class="block py-3 text-gray-600 hover:text-blue-500 border-b border-gray-50">Kontakt</a>
    <a href="/#kreator" class="block mt-3 bg-blue-500 text-white text-center px-5 py-3 rounded-lg font-semibold">Przygotuj tekst</a>
  </div>
</header>
<% } %>

